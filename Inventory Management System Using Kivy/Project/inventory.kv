<show>:
    MDScreen:
        name:"home"
        md_bg_color: [0, 128, 0, 0.5]
        MDCard:
            padding:30
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint_y:.73
            size_hint_x:.6
            elevation:4
            shadow_radius: 6
            shadow_offset:0, 2
            
            size: "300dp", "100dp"
            MDBoxLayout:
                orientation: 'vertical'
                spacing:10
                Image:
                    source: '3.jpg'
                MDLabel:
                    text: "Inventory Management System"
                    theme_text_color: "Custom"
                    text_color: 255, 110, 71, 0.8
                    bold:True
                    font_size:40
                    halign:"center"
                MDTextField:
                    hint_text: "Username"
                    mode: "fill"
                    id:ckname
                    
                MDTextField:
                    hint_text: "Password"
                    mode: "fill"
                    id:ckpas
                    password:True
                    password_mask:"*"
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    padding_x:dp(30)
                    padding_y:dp(20)
                    size_hint: 0.7, 0.3
                    pos_hint:{"center_x":.5,"center_y":.5}
                    MDRaisedButton:
                        text: "Sign in"
                        font_size:18
                        size_hint: 1.2,1.2
                        pos_hint:{"center_x":.5,"center_y":.5}
                        on_press:root.checkUser()
                    MDRaisedButton:
                        text: "Sign up"
                        font_size:18
                        size_hint: 1.2,1.2
                        pos_hint:{"center_x":.5,"center_y":.5}
                        on_release:root.current="signup"

                    
    MDScreen:
        name:"signup"
        md_bg_color: [0, 128, 0, 0.5]
        
        MDCard:
            padding:40
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint_y:.85
            size_hint_x:.6
            elevation:4
            shadow_radius: 6
            shadow_offset:0,2
            
            size: "200dp", "100dp"
