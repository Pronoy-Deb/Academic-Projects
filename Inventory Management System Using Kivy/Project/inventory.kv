                        text: "Submit"
                        font_size:20
                        size_hint: 0.8,0.8
                        pos_hint:{"center_x":.5,"center_y":.5}
                        on_press:root.signup()
                MDRaisedButton:
                    text: 'Previous'
                    size_hint_y:.1
                    size_hint_x:.3
                    font_size:20
                    on_release:root.current="home"
                        
