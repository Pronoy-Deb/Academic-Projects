                orientation: 'vertical'
                spacing:20
                halign:"center"
                Image:
                    source: '3.jpg'
                MDLabel:
                    text: "Sign Up"
                    theme_text_color: "Custom"
                    text_color: 255, 110, 71, 0.8
                    bold:True
                    font_size:40
                    halign:"center"
                MDTextField:
                    id:name
                    hint_text: "Username"
                    mode: "fill"
                    required:True
                MDTextField:
                    id:mail
                    hint_text: "E-mail"
                    mode: "fill"
                    required:True
                MDTextField:
                    id:pas
                    hint_text: "Password"
                    mode: "fill"
                    required:True
                    password:True
                    password_mask:"*"
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing:15
                    padding_x:dp(20)
                    padding_y:dp(0)
                    pos_hint:{"center_x":.5,"center_y":.4}
