<Demo>:
    MDScreen:
        name:"loginscreen"
        md_bg_color: app.theme_cls.primary_color
        MDCard:
            padding:30
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint_y:.73
            size_hint_x:.6
            elevation:4
            shadow_radius: 6
            shadow_offset:0, 2
            
            size: "300dp", "100dp"
            MDBoxLayout:
                orientation: 'vertical'
                spacing:10
                Image:
                    source: 'DUET_Logo.png'
                MDLabel:
                    text: "DUET Dinning Hall Management System"
                    theme_text_color: "Custom"
                    text_color: 255, 110, 71, 0.8
                    bold:True
                    font_size:18
                    halign:"center"
                MDTextField:
                    hint_text: "Enter Your ID"
                    mode: "fill"
                    id:cid
                    
                MDTextField:
                    hint_text: "Enter Your Password"
                    mode: "fill"
                    id:cpas
                    password:True
                    font_size:16
                    password_mask:"*"
                
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing:15
                    padding_x:dp(20)
                    padding_y:dp(0)
                    pos_hint:{"center_x":.5,"center_y":.4}
                    MDRaisedButton:
                        text: "Log In"
                        on_press:root.checkUser()
                    MDRaisedButton:
                        text: "Register"
                        on_release:root.current="regscreen"
                            
    MDScreen:
        name:"regscreen"
        md_bg_color: app.theme_cls.primary_color
        
        MDCard:
            padding:40
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint_y:.85
            size_hint_x:.6
            elevation:4
            shadow_radius: 6
            shadow_offset:0,2
            
            size: "200dp", "100dp"
            MDBoxLayout:
                orientation: 'vertical'
                spacing:20
                halign:"center"
                Image:
                    source: 'DUET_Logo.png'
                
                MDTextField:
                    id:i
                    hint_text: "Enter Your ID"
                    mode: "fill"
                    required:True
                MDTextField:
                    id:n
                    hint_text: "Enter Your Name"
                    mode: "fill"
                MDTextField:
                    id:cn
                    hint_text: "Enter Your Contact Number"
                    mode: "fill"
                MDTextField:
                    id:pas
                    hint_text: "Enter Your Password"
                    mode: "fill"
                    required:True
                    password:True
                    font_size:16
                    password_mask:"*"
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing:15
                    padding_x:dp(20)
                    padding_y:dp(0)
                    pos_hint:{"center_x":.5,"center_y":.4}
                    MDRaisedButton:
                        text: "Register"
                        on_press:root.registerUser()
                    MDRaisedButton:
                        text: "Log In Now"
                        on_release:root.current="loginscreen"
                                          
