<Button>
    font_size: 50
    background_color:(0,0,1,1)

<MyGridLayout>
    name: name
    color:color
    food:food

    GridLayout
        cols:1
        size: root.width, root.height
        
        GridLayout:
            cols:2
            
            Label:
                text: "Name"
            TextInput:
                id:name
                multiline:False
                
            Label:
                text: "food"
            TextInput:
                id:food
                multiline:False
                
            Label:
                text: "color"
            TextInput:
                id:color
                multiline:False
                
        Button:
            text: "Submit"
            font_size:32
            on_press: root.press()
            
       
            
                                